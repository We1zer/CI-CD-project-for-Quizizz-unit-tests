# Environment Configuration Example
# Скопіюйте цей файл як .env та заповніть значення

# ========================================
# Test Environment Settings
# ========================================

# Environment type: local, dev, staging, production
ENVIRONMENT=local

# Test execution mode
TEST_MODE=parallel
MAX_WORKERS=4

# ========================================
# Jenkins Configuration
# ========================================

JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-token-here

# ========================================
# Allure Configuration
# ========================================

ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report
ALLURE_SERVER_URL=http://localhost:5050

# ========================================
# ReportPortal Configuration
# ========================================

RP_ENDPOINT=http://localhost:8080
RP_UUID=your-uuid-here
RP_PROJECT=quizizz_tests
RP_LAUNCH=Automated Tests
RP_ENABLED=false

# ========================================
# Test Data Configuration
# ========================================

# Mock data paths
MOCK_DATA_DIR=./mock_data
SEARCH_RESULTS_FILE=search_results.json
CATEGORY_TREE_FILE=category_tree.json

# ========================================
# Report Configuration
# ========================================

REPORT_DIR=./reports
HTML_REPORT=report.html
XML_REPORT=junit.xml
COVERAGE_DIR=coverage

# ========================================
# GitHub Actions
# ========================================

GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-username/your-repo

# ========================================
# Email Notifications (optional)
# ========================================

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_RECIPIENTS=team@example.com

# ========================================
# Slack Notifications (optional)
# ========================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#test-results

# ========================================
# Test Execution Timeouts
# ========================================

DEFAULT_TIMEOUT=30
SLOW_TEST_TIMEOUT=60
BUILD_TIMEOUT=1800

# ========================================
# Browser Configuration (for future Selenium tests)
# ========================================

BROWSER=chrome
HEADLESS=true
IMPLICIT_WAIT=10

# ========================================
# Logging Configuration
# ========================================

LOG_LEVEL=INFO
LOG_FILE=test_execution.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ========================================
# Database Configuration (optional)
# ========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_results
DB_USER=testuser
DB_PASSWORD=testpass

# ========================================
# CI/CD Flags
# ========================================

# Skip stages
SKIP_LINTING=false
SKIP_COVERAGE=false
SKIP_BDD_TESTS=false

# Fail fast
FAIL_FAST=true

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=5
